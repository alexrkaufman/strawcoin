{% extends "base.jinja2" %}
{% block content %}
    <div class="content-section content-section--center">
        <h1 class="page-title">ğŸš€ Welcome to The Revolution ğŸš€</h1>
        <p class="subtitle">
            Disrupting <strong>The Short Straw</strong> through cutting-edge comedy tokenization
        </p>
        <div class="card card--gradient-success" data-username="{{ current_username }}">
            <h3>ğŸ’° Welcome back, {{ current_username }}!</h3>
            <p class="balance-amount">{{ current_user_balance }} Straw Coins</p>
        </div>
        {{ m.leaderboard_button() }}
    </div>
    <!-- Send Coins Feature -->
    <div class="content-section">
        <h2 class="section-title">ğŸ’¸ Send Coins to Fellow Shareholders</h2>
        <!-- Quick Send Buttons -->
        <div class="quick-send-section">
            <p>Quick Send:</p>
            <div class="quick-send-buttons">
                <button class="quickSend button button--secondary" data-amount="100">100 coins</button>
                <button class="quickSend button button--secondary" data-amount="500">500 coins</button>
                <button class="quickSend button button--secondary" data-amount="1000">1,000 coins</button>
            </div>
        </div>
        <div>
            <form id="sendCoinsForm" class="send-form">
                <div>
                    <label class="form-label">Recipient:</label>
                    <input type="text"
                           id="recipient"
                           name="recipient"
                           class="form-input"
                           list="recipientList"
                           placeholder="Type or select a shareholder..."
                           autocomplete="off"
                           required>
                    <datalist id="recipientList">
                        {% for user in available_recipients %}<option value="{{ user.username }}">{{ user.username }}</option>{% endfor %}
                    </datalist>
                    <small>ğŸ’¡ Start typing to see suggestions or click the dropdown arrow</small>
                </div>
                <div>
                    <label class="form-label">Amount:</label>
                    <input type="number"
                           id="amount"
                           name="amount"
                           min="1"
                           max="{{ current_user_balance }}"
                           class="form-input"
                           placeholder="Enter amount..."
                           required>
                </div>
                <button type="submit" class="button button--danger">ğŸš€ Send Coins</button>
            </form>
        </div>
        <!-- Status Display -->
        <div id="transferStatus" class="message"></div>
    </div>
    <!-- Recent Transactions -->
    {% if recent_transactions %}
        <div class="content-section">
            <h2 class="section-title">ğŸ“ˆ Your Recent Transactions</h2>
            <div class="item-list">
                {% for transaction in recent_transactions %}
                    <div class="list-item{% if transaction.sender == current_username %} list-item--sent{% else %} list-item--received{% endif %}">
                        <div>
                            {% if transaction.sender == current_username %}
                                <span class="transaction-label">ğŸ“¤ Sent to {{ transaction.recipient }}</span>
                            {% else %}
                                <span class="transaction-label">ğŸ“¥ Received from {{ transaction.sender }}</span>
                            {% endif %}
                            <div class="transaction-timestamp">{{ transaction.timestamp.strftime("%Y-%m-%d %H:%M") }}</div>
                        </div>
                        <span class="transaction-amount">
                            {% if transaction.sender == current_username %}
                                -{{ "{:,}".format(transaction.amount) }}
                            {% else %}
                                +{{ "{:,}".format(transaction.amount) }}
                            {% endif %}
                        </span>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
    <!-- Market Stats -->
    <div class="responsive-grid">
        <div class="card">
            <h3>ğŸ’° Market Cap</h3>
            <p class="stat-value" data-stat="market-cap">{{ "{:,}".format(market_cap) }}</p>
            <p>Total Straw Coins</p>
        </div>
        <div class="card">
            <h3>ğŸ‘¥ Active Stakeholders</h3>
            <p class="stat-value" data-stat="user-count">{{ stakeholder_count }}</p>
            <p>Market Participants</p>
        </div>
        <div class="card">
            <h3>ğŸ“Š Trading Volume</h3>
            <p class="stat-value" data-stat="volume">{{ "{:,}".format(volume) }}</p>
            <p>Total Coins Transferred</p>
        </div>
    </div>
    <!-- Performer System Status -->
    <div class="content-section">
        <h2 class="section-title">ğŸ­ Performer Economy</h2>
        <div class="responsive-grid">
            <div class="card">
                <h3>ğŸª Performers</h3>
                <p class="stat-value">{{ performer_count }}</p>
                <p>Active on Stage</p>
            </div>
            <div class="card">
                <h3>ğŸ‘¥ Audience</h3>
                <p class="stat-value">{{ audience_count }}</p>
                <p>Market Participants</p>
            </div>
        </div>
        {% if current_user_is_performer %}
            <div class="card card--gradient-primary">
                <h3>ğŸ­ You are a PERFORMER</h3>
                <p>You lose 5 coins to each audience member every minute</p>
                <p class="text-sm">Make them laugh to earn coins back through tips!</p>
            </div>
        {% else %}
            <div class="card card--gradient-primary">
                <h3>ğŸ‘¥ You are AUDIENCE</h3>
                <p>You receive 5 coins from each performer every minute</p>
                <p class="text-sm">Send coins to performers to show appreciation!</p>
            </div>
        {% endif %}
        {% if redistribution_enabled %}
            <div class="redistribution-info">
                <p class="text-sm">
                    â° Automatic redistribution every minute |
                    ğŸ’° 5 coins from each performer â†’ each audience member
                </p>
            </div>
        {% endif %}
    </div>
    <div class="content-section">
        <h2 class="section-title">ğŸ† Market Leaders</h2>
        <div class="item-list">
            {% if top_performers %}
                {% for performer in top_performers %}
                    {% set medals = ["ğŸ¥‡", "ğŸ¥ˆ", "ğŸ¥‰"] %}
                    <div class="list-item{% if performer.username == current_username %} list-item--highlight{% endif %}">
                        <span>{{ medals[loop.index0] }} {{ performer.username }}</span>
                        <span>{{ "{:,}".format(performer.coin_balance) }} Straw Coins</span>
                    </div>
                {% endfor %}
            {% else %}
                <p class="text-center opacity-70">No stakeholders yet - Be the first to join the revolution!</p>
            {% endif %}
        </div>
    </div>
    <div class="content-section content-section--dark">
        {% if not current_username %}
            <h2>ğŸŒ™ Join The Moon Mission</h2>
            <p class="subtitle">Ready to disrupt comedy through market forces?</p>
            <div class="cta-benefits">
                <p>
                    ğŸ¯ <strong>Get 10,000 Straw Coins</strong> instantly upon registration
                </p>
                <p>
                    ğŸ’¸ <strong>Trade with other audience members</strong> during The Short Straw
                </p>
                <p>
                    ğŸ“ˆ <strong>Let the market decide</strong> comedic value - no taste required!
                </p>
            </div>
        {% else %}
            <h2>ğŸ­ The Comedy Market is Live!</h2>
            <p class="subtitle">Trade coins with fellow audience members and influence the show!</p>
            <div class="cta-benefits">
                <p>
                    ğŸ’¸ <strong>Send coins</strong> to show support for your favorite comedians
                </p>
                <p>
                    ğŸ“Š <strong>Track your portfolio</strong> and climb the leaderboard
                </p>
                <p>
                    ğŸ† <strong>Become a comedy market leader</strong> through strategic trading!
                </p>
            </div>
        {% endif %}
    </div>
    <script>
    // Pass current username to JavaScript
    window.currentUsername = '{{ current_username }}';
    </script>
    <script src="{{ url_for('static', filename='js/home.js') }}"></script>
{% endblock %}

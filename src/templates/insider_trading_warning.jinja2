{% block content %}
<div style="min-height: 80vh; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, #1a1a1a, #2d1b1b);">
    <div style="max-width: 600px; text-align: center; padding: 40px; background: linear-gradient(135deg, #2d1b1b, #4a1515); border: 2px solid #F23645; border-radius: 20px; box-shadow: 0 10px 30px rgba(242, 54, 69, 0.3);">
        

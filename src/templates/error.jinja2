{% extends "base.jinja2" %}
{% block content %}
    <div class="error-container">
        <div class="error-icon">{{ error_icon }}</div>
        <h1 class="error-title">{{ error_title }}</h1>
        <p class="error-description">{{ error_description }}</p>
        {% if error_number == 403 %}
            {{ m.callout_box(title="",
                        message="The Short Straw maintains strict access controls for market integrity.",
                        class="callout-box--error") }}
        {% endif %}
        {{ m.recovery_box() }}
    </div>
{% endblock %}
{% block footer %}
    <!-- Footer Notice -->
    <p class="regulatory-footer">
        <strong>Straw Coin Regulatory Commission</strong>
        <br>
        Protecting Market Integrity Since June 2025
        <br>
        <em>"Where Shareholder Value Meets Regulatory Compliance"</em>
    </p>
{% endblock %}

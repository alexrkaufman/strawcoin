{% extends "base.jinja2" %}
{% block content %}
    <div class="regulatory-warning-page independence">
        <div class="regulatory-warning-container independence">
            <!-- Independence Icon -->
            <div class="warning-icon-animated">🏛️⚖️🏛️</div>
            <!-- Main Warning -->
            <h1 class="regulatory-warning-title independence">
                <strong>CHANCELLOR</strong> INDEPENDENCE PROTOCOL
            </h1>
            <!-- Independence Notice -->
            {{ m.callout_box(
                title="🔒 MARKET OVERSIGHT PROTECTION ACTIVATED",
                message='<p class="regulatory-alert-text"><strong>' ~ username ~ '</strong>, your attempt to transfer <strong>' ~ (amount | default(0)) ~ ' Straw Coins</strong> to <span class="violation-highlight independence">CHANCELLOR</span> has been <strong>BLOCKED</strong>.</p>
                <p class="regulatory-info-text">CHANCELLOR cannot accept direct payments to maintain <strong>REGULATORY INDEPENDENCE</strong> and prevent conflicts of interest.</p>',
                class="regulatory-notice independence"
            ) }}
            <!-- Enforcement Notice -->
            {{ m.callout_box(
                title="🚨 REGULATORY ENFORCEMENT NOTICE",
                message="Attempts to circumvent CHANCELLOR's independence protocols are monitored and may result in regulatory action. CHANCELLOR maintains neutrality through strict payment restrictions.",
                class="warning-box"
            ) }}
            <!-- Independence Explanation -->
            {{ m.callout_box(
                title="🛡️ WHY QUANT INDEPENDENCE MATTERS",
                message="<p>🏦 <strong>Regulatory Oversight:</strong> CHANCELLOR must remain impartial to enforce market rules</p>
                <p>⚖️ <strong>Conflict Prevention:</strong> Direct payments could compromise enforcement decisions</p>
                <p>🔍 <strong>Market Integrity:</strong> Independence ensures fair treatment of all traders</p>
                <p>📊 <strong>Platform Administration:</strong> Neutral oversight protects all participants</p>
                <p>🚫 <strong>Anti-Corruption:</strong> No bribes, gifts, or influence attempts allowed</p>",
                class="info-box"
            ) }}
            <!-- Alternative Actions -->
            {{ m.callout_box(
                title="💡 ALTERNATIVE TRADING OPTIONS",
                message='<div class="alternatives-list">
                    <p>✅ <strong>Trade with other participants:</strong> Send coins to performers or audience members</p>
                    <p>✅ <strong>Participate in market activities:</strong> Engage in legitimate trading behavior</p>
                    <p>✅ <strong>Build your portfolio:</strong> Focus on maximizing your Straw Coin holdings</p>
                    <p>⚠️ <strong>Note:</strong> CHANCELLOR maintains strict independence protocols</p>
                </div>',
                class="independence-alternatives"
            ) }}
            <!-- Action Buttons -->
            <div class="regulatory-actions">
                <a href="/" class="regulatory-action-btn primary">📊 Return to Trading Platform</a>
                <a href="/leaderboard" class="regulatory-action-btn success">📈 View Market Leaders</a>
            </div>
            <!-- Footer Notice -->
            <div class="regulatory-footer">
                <p class="regulatory-footer-text">
                    <strong>CHANCELLOR - Independent Market Oversight</strong>
                    <br>
                    Maintaining Market Integrity Through Regulatory Independence
                    <br>
                    <em>"Impartial • Incorruptible • Indispensable"</em>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
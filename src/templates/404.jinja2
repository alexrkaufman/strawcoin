{% extends "base.jinja2" %}
{% block content %}
    <div class="error-page-section">
        <div class="error-icon">🚀💥</div>
        <h1 class="error-title">404 - Market Disruption Detected!</h1>
        <p class="error-description">The requested resource has been volatilized by market forces</p>
        {{ m.callout_box(title="🔍 Navigation Recovery Protocol",
                message="<p>• This endpoint may have been disrupted by revolutionary market dynamics</p>
                <p>• The Short Straw comedy tokenization platform is constantly evolving</p>
                <p>• Maximum shareholder value optimization may have relocated this resource</p>",
                class="info-box large") }}
        <div class="error-actions">
            <a href="/" class="action-btn primary">🏠 Return to Mission Control</a>
            <a href="/api/market-stats" class="action-btn success">📊 View Market Analytics</a>
        </div>
        {{ m.callout_box(title="💡 Pro Trading Tip",
                message='<p class="tip-text">"In volatile markets, even 404 errors present opportunities for maximum gains. Redirect your portfolio to profitable endpoints!"</p>',
                class="info-box compact") }}
    </div>
{% endblock %}

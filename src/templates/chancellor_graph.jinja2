{% extends "base.jinja2" %}

{% block content %}
<div class="chancellor-graph-container">
    <div class="graph-header">
        <h1 class="graph-title">
            <span class="title-icon">üìä</span>
            CHANCELLOR'S MARKET OVERSIGHT
            <span class="title-icon">üèõÔ∏è</span>
        </h1>
        <div class="graph-subtitle">Top 5 Performers - Last 10 Minutes</div>
        <div class="market-status">
            <span class="status-indicator" id="marketStatus"></span>
            <span class="status-text">Market Status: <span id="marketStatusText">Loading...</span></span>
        </div>
    </div>

    <div class="chart-container">
        <canvas id="performerChart"></canvas>
    </div>
</div>

<style>
    .chancellor-graph-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
    }

    .graph-header {
        text-align: center;
        margin-bottom: 30px;
        background: linear-gradient(135deg, #1a1a2e 0%, #0f0f23 100%);
        padding: 30px;
        border-radius: 15px;
        border: 2px solid var(--accent-color);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    }

    .graph-title {
        font-size: 2.5rem;
        margin: 0;
        background: linear-gradient(45deg, #FFD700, #FFA500);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 30px rgba(255, 215, 0, 0.5);
    }

    .title-icon {
        font-size: 2rem;
        vertical-align: middle;
    }

    .graph-subtitle {
        font-size: 1.2rem;
        color: var(--text-secondary);
        margin-top: 10px;
    }

    .market-status {
        margin-top: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .status-indicator {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background-color: #ccc;
        animation: pulse 2s infinite;
    }

    .status-indicator.active {
        background-color: #00D084;
    }

    .status-indicator.closed {
        background-color: #F23645;
    }

    @keyframes pulse {
        0% { opacity: 1; }
        50% { opacity: 0.5; }
        100% { opacity: 1; }
    }

    .chart-container {
        background: rgba(26, 26, 46, 0.8);
        border-radius: 15px;
        padding: 30px;
        border: 1px solid var(--accent-color);
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
        margin-bottom: 30px;
        min-height: 500px;
        position: relative;
    }

    @media (max-width: 768px) {
        .graph-title {
            font-size: 1.8rem;
        }
        
        .chart-container {
            height: 300px;
            padding: 15px;
        }
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/date-fns@2.29.3/index.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns@3.0.0/dist/chartjs-adapter-date-fns.bundle.min.js"></script>
<script src="{{ url_for('static', filename='js/chancellor_graph.js') }}"></script>
{% endblock %}
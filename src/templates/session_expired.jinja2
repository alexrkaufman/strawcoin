{% extends "base.jinja2" %}
{% block content %}
    <style>
    .container {
        padding-top: 20px !important;
    }
    #session-banner {
        display: none !important;
    }
    </style>
    <div class="content-section content-section--center">
        <div>
            <div class="error-title">⏰💥</div>
            <h1 class="page-title">Session Expired!</h1>
            <p class="subtitle">Your trading session has been terminated due to market inactivity</p>
        </div>
        {{ m.callout_box(title="🚨 Session Timeout Protocol",
                message="<p>• Your 5-minute trading window has expired</p>
                <p>• All positions have been temporarily frozen for security</p>
                <p>• No Straw Coins have been lost during this process</p>
                <p>• Maximum stakeholder protection protocols activated</p>",
                class="callout-box--info") }}
        {{ m.callout_box(title="💡 Recovery Options",
                message='<p>Choose your path back to market participation:</p>
                <div class="session-expired-actions">
                    <a href="/register" id="redirectButton" class="button button--success button--large">🔐 Re-authenticate</a>
                </div>',
                class="callout-box--info") }}
        {{ m.callout_box(title="⚡ Pro Trading Tip",
                message='<p class="tip-text">"Stay active during The Short Straw performances to maintain your trading session!"</p>
                <p class="text-sm">Any interaction (scrolling, tapping, trading) resets your 5-minute timer</p>',
                class="callout-box--info callout-box--compact") }}
        {{ m.callout_box(title="",
                message='<p class="text-secondary">🎭 Remember: The Short Straw comedy market never sleeps - but your session does!</p>',
                class="callout-box--warning") }}
    </div>
    <script src="{{ url_for('static', filename='js/session_expired.js') }}"></script>
{% endblock %}

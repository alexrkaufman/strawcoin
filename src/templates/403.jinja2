{% extends "base.jinja2" %}
{% block content %}
    <div class="session-expired-section">
        <div class="session-expired-header">
            <div class="session-expired-title">🚫⚡</div>
            <h1 class="session-expired-subtitle error">Access Forbidden!</h1>
            <p class="session-expired-message">You do not have permission to access this area of the comedy market</p>
        </div>
        {{ m.callout_box(
            title="🔒 Restricted Access",
            message="<p>• This area requires special authorization</p>
            <p>• Only authorized market participants can access this terminal</p>
            <p>• Your session credentials are insufficient</p>
            <p>• Contact system administrators for elevated access</p>",
            class="info-box"
        ) }}
        {{ m.callout_box(
            title="🏠 Available Options",
            message='<p>Return to authorized areas of the platform:</p>
            <div class="session-expired-actions">
                <a href="/" class="session-expired-btn">🏠 Return to Home</a>
                <a href="/leaderboard"
                   class="session-expired-btn secondary">📊 View Leaderboard</a>
            </div>',
            class="info-box"
        ) }}
        {{ m.callout_box(
            title="⚡ Security Notice",
            message='<p class="tip-text">"All access attempts to restricted areas are logged for security purposes"</p>
            <p class="security-notice">Unauthorized access attempts may result in account suspension</p>',
            class="info-box compact"
        ) }}
        {{ m.callout_box(
            title="",
            message='<p class="error-reminder">🎭 The Straw Coin market maintains strict access controls for system integrity</p>',
            class="error-box"
        ) }}
    </div>
{% endblock %}

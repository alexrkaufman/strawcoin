{% macro callout_box(title, message, class="") -%}
    <div class="callout-box {{ class }}">
        {% if title %}<h4>{{ title }}</h4>{% endif %}
        <div>{{ message|safe }}</div>
    </div>
{%- endmacro %}
{% macro crypto_badge(message) -%}
    <span class="crypto-badge">{{ message }}</span>
{%- endmacro %}

{% macro callout_box(title, message, class="") -%}
    <div class="callout-box {{ class }}">
        {% if title %}<h4 class="title">{{ title }}</h4>{% endif %}
        <div class="content">{{ message|safe }}</div>
    </div>
{%- endmacro %}
{% macro crypto_badge(message) -%}
    <span class="crypto-badge">{{ message }}</span>
{%- endmacro %}
{% macro registration_form() -%}
    <div class="registration-form">
        <form id="registrationForm">
            <div class="form-group">
                <label for="username" class="form-label">Choose Your Market Identity:</label>
                <input type="text"
                       id="username"
                       name="username"
                       required
                       maxlength="20"
                       class="form-input"
                       placeholder="Enter username..."
                       autocomplete="off"
                       autocapitalize="none">
            </div>
            <button type="submit" id="registerBtn" class="register-btn button">🌙 Launch to Moon Mission</button>
        </form>
        <div id="errorMessage" class="message error-message">
            <p></p>
        </div>
        <div id="loadingMessage" class="message loading-message">
            <div class="loading-emoji">⏳</div>
            <p>Initializing stakeholder account...</p>
        </div>
        <div id="successMessage" class="message success-message">
            <p></p>
        </div>
    </div>
{%- endmacro %}
{% macro leaderboard_button() -%}
    <div class="nav-links">
        <a href="/leaderboard" class="leaderboard-link button">📊 Real-Time Leaderboard</a>
    </div>
{%- endmacro %}
